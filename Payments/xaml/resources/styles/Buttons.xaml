<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="Button" x:Key="BigButton">
        <Setter Property="Margin" Value="5"></Setter>
        <Setter Property="Height" Value="35"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="ToolButton">
        <Setter Property="Height" Value="26"></Setter>
        <Setter Property="Padding" Value="5 0"></Setter>
    </Style>
    
    <Style TargetType="Button" x:Key="DialogButton">
        <Setter Property="Height" Value="28"></Setter>
        <Setter Property="MinWidth" Value="75"></Setter>
        <Setter Property="Padding" Value="0 5"></Setter>
    </Style>

</ResourceDictionary>